{{> header}}

<div class="card mt-2 w-75 mx-auto text-center">
    <div class="card-header">
        <h3 class="card-title">Registro</h3>
    </div>
    <div class="card-body">
        <form method="POST">
            <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="Nombre" required>
            </div>
            <div class="form-group">
                <input type="text" name="lastname" class="form-control" placeholder="Apellido" required>
            </div>
            <div class="form-group">
                <input type="email" name="email"  class="form-control" placeholder="Correo" required>
            </div>
            <div class="form-group">
                <input type="date" name="date" class="form-control" required>
            </div>
            <div class="form-group">
                <input type="password" id="password" name="password" class="form-control" placeholder="Contraseña" required>
            </div>

            <button class="btn btn-success btn-block">Registrarse</button>

        </form>
    </div>
    
</div>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>


<script>
    
    if({{error}} !== 0){

        if({{error}} === 3){
            
            var texto = "Debe ser Mayor de Edad\nLa Contraseña debe tener al menos 6 Digitos"
        }

        else if({{error}} === 1){

            var texto = "Debe ser Mayor de Edad";

        }
        else if({{error}} === 2){

            var texto = "La Contraseña debe tener al menos 6 Digitos";

        }
        else if({{error}} === 4){

            var texto = "Ya existe un usuario con ese email";

        }
        

        swal({
            icon: "error",
            title: "Error",
            text: texto
        })

    }else if({{success}} === true){

        swal({
            icon: "success",
            title: "Cuenta Creada con Exito"
        })

    }


</script>

{{> footer}}